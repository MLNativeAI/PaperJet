    "typecheck": "tsc --noEmit",
    "build": "bun build --target=bun ./src/index.ts --outdir=dist"
  },
  "devDependencies": {
    "@types/bun": "^1.2.11"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
