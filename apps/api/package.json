{
  "name": "@paperjet/api",
  "private": true,
  "exports": {
    "./routes": "./src/routes.ts"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "openapi": "http localhost:3000/openapi > ../docs/api-reference/openapi.json",
