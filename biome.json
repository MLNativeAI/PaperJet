{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "useUniqueElementIds": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "assist": {
    "enabled": true
  },
  "files": {
    "includes": [
      "**",
      "!**/*.css",
      "!**/.wrangler",
      "!**/node_modules",
      "!**/dist",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/.turbo",
      "!**/.next",
      "!**/.next/**",
      "!**/ml"
    ]
  }
}
